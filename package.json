    "next-images": "^1.3.0",
    "next-optimized-images": "2.6.0",
    "prettier": "2.0.5",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.7.0",
    "react-markdown": "^4.3.1",
    "styled-components": "^5.0.1",
    "url-loader": "2.3.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.0",
